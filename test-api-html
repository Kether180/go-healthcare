    <script>
        const API_BASE = 'http://localhost:8080';

        function displayResponse(data, status) {
            const responseDiv = document.getElementById('response');
            const statusBadge = document.getElementById('statusBadge');

            responseDiv.textContent = JSON.stringify(data, null, 2);
            responseDiv.className = '';

            if (status >= 200 && status < 300) {
                statusBadge.innerHTML = `<span class="status-badge status-success">${status} Success</span>`;
            } else {
                statusBadge.innerHTML = `<span class="status-badge status-error">${status} Error</span>`;
            }
        }

        function displayError(error) {
            const responseDiv = document.getElementById('response');
            const statusBadge = document.getElementById('statusBadge');

            responseDiv.textContent = `Error: ${error.message}\n\nMake sure your API server is running on http://localhost:8080`;
            responseDiv.className = '';
            statusBadge.innerHTML = `<span class="status-badge status-error">Failed</span>`;
        }

        function clearResponse() {
            document.getElementById('response').innerHTML = '<div class="empty-response">Response cleared. Ready for next request.</div>';
            document.getElementById('statusBadge').innerHTML = '';
        }

        async function healthCheck() {
            try {
                const response = await fetch(`${API_BASE}/health`);
                const data = await response.json();
                displayResponse(data, response.status);
            } catch (error) {
                displayError(error);
            }
        }

        async function getAllUsers() {
            try {
                const response = await fetch(`${API_BASE}/api/v1/users`);
                const data = await response.json();
                displayResponse(data, response.status);
            } catch (error) {
                displayError(error);
            }
        }

        async function getUserById() {
            const id = document.getElementById('getUserId').value;
            if (!id) {
                alert('Please enter a user ID');
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/api/v1/users/${id}`);
                const data = await response.json();
                displayResponse(data, response.status);
            } catch (error) {
                displayError(error);
            }
        }

        async function createUser() {
            const name = document.getElementById('createName').value;
            const email = document.getElementById('createEmail').value;

            if (!name || !email) {
                alert('Please fill in all fields');
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/api/v1/users`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name, email })
                });
                const data = await response.json();
                displayResponse(data, response.status);

                // Clear form on success
                if (response.ok) {
                    document.getElementById('createName').value = '';
                    document.getElementById('createEmail').value = '';
                }
            } catch (error) {
                displayError(error);
            }
        }

        async function updateUser() {
            const id = document.getElementById('updateId').value;
            const name = document.getElementById('updateName').value;
            const email = document.getElementById('updateEmail').value;

            if (!id || !name || !email) {
                alert('Please fill in all fields');
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/api/v1/users/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name, email })
                });
                const data = await response.json();
                displayResponse(data, response.status);
            } catch (error) {
                displayError(error);
            }
        }

        async function deleteUser() {
            const id = document.getElementById('deleteId').value;

            if (!id) {
                alert('Please enter a user ID');
                return;
            }

            if (!confirm(`Are you sure you want to delete user ${id}?`)) {
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/api/v1/users/${id}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                displayResponse(data, response.status);

                // Clear form on success
                if (response.ok) {
                    document.getElementById('deleteId').value = '';
                }
            } catch (error) {
                displayError(error);
            }
        }
    </script>
</body>
