        <div class="endpoint-grid">
            <!-- Health Check -->
            <div class="endpoint-card">
                <div class="endpoint-header">
                    <span class="method-badge method-get">GET</span>
                    <span class="endpoint-title">Health Check</span>
                </div>
                <div class="endpoint-path">/health</div>
                <button class="btn-get" onclick="healthCheck()">Test Health Check</button>
            </div>

            <!-- Get All Users -->
            <div class="endpoint-card">
                <div class="endpoint-header">
                    <span class="method-badge method-get">GET</span>
                    <span class="endpoint-title">Get All Users</span>
                </div>
                <div class="endpoint-path">/api/v1/users</div>
                <button class="btn-get" onclick="getAllUsers()">Get All Users</button>
            </div>

            <!-- Get User by ID -->
            <div class="endpoint-card">
                <div class="endpoint-header">
                    <span class="method-badge method-get">GET</span>
                    <span class="endpoint-title">Get User by ID</span>
                </div>
                <div class="endpoint-path">/api/v1/users/:id</div>
